<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/login_button_edges</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="AppNameTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">@font/dancing_script</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemImageStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="MenuItemTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textColor">#faf9f7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:drawableTint">@color/textLight</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
